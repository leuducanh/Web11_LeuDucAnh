    <div class="container-fruid">
        <div class="row">
            <div  class="text-center col-md-12">
                <div class="col-md-4 col-md-offset-1">
                    <a href="/answer/{{question.id}}/yes" class="yes btn btn-primary">
                        <span class="glyphicon glyphicon-thumbs-up"></span>Đúng</a>
                </div>
                <div class="col-md-4 col-md-offset-1">
                    <a href="/answer/{{question.id}}/no" class="no btn btn-danger col-md-offset-7">
                        <span class="glyphicon glyphicon-thumbs-down"></span>Sai</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 text-center">
        <a href="" class="btn btn-default">Kết quả vote</a>
        <a id="otherQuestion" href="" class="btn btn-default">Câu hỏi khác</a>
    </div>

    <script>
    $(document).ready(function(){
        $("#otherQuestion").click(function(event){
            event.preventDefault();
            $.ajax({
                url:'/ask/otherQuestion',
                type:'GET',
                success:function(res){
                    console.log(res)
                    $("#question").html(res.content);
                    $(".yes").attr("href","/answer/"+res.id+"/yes");
                    $(".no").attr("href","/answer/"+res.id+"/no");
                }
            
        })
        })
    })

</script>